{% extends 'base.html.twig' %}

{% block body %}
    <h1>Search for ideas!</h1>
    {{ form_start(searchForm) }}
    {{ form_widget(searchForm) }}
    <button class="btn btn-sm btn-primary">Search!</button>
    {{ form_end(searchForm) }}

    <h2>{{ results.total_count }} events ! Showing {{ results.results|length }} results</h2>

    <div class="d-flex flex-wrap">
    {% for event in results.results %}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{ event.image }}" alt="{{ event.title_fr }}">
            <div class="card-body">
                <div class="card-title">{{ event.title_fr }}</div>
                <div class="card-text">{{ event.description_fr }}</div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

{% block title %}

{% endblock %}

